<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:stretchColumns="0">
	<TableRow>
		<TextView android:textStyle="bold"
			android:paddingLeft="8dip"
			android:textSize="16dip"
			android:layout_height="fill_parent"
			android:gravity="center_vertical"
			android:text="@string/label_notify"/>
		<CheckBox android:id="@+id/checkbox_notify"
			android:paddingRight="8dip"
			android:gravity="right"/>
	</TableRow>
    <View android:layout_height="2dip"
    	android:background="#FFBEBEBE"/>
	<TableRow>
		<TextView android:id="@+id/text_vibrate"
			android:textSize="16dip"
			android:paddingLeft="8dip"
			android:layout_height="fill_parent"
			android:gravity="center_vertical"
			android:text="@string/label_vibrate"/>
		<CheckBox android:id="@+id/checkbox_vibrate"
			android:paddingRight="8dip"
			android:gravity="right"/>
	</TableRow>
    <View android:layout_height="1dip"
    	android:background="#FFBEBEBE"/>
	<TableRow>
		<TextView android:id="@+id/text_led"
			android:textSize="16dip"
			android:paddingLeft="8dip"
			android:layout_height="fill_parent"
			android:gravity="center_vertical"
			android:text="@string/label_led"/>
		<CheckBox android:id="@+id/checkbox_led"
			android:paddingRight="8dip"
			android:gravity="right"/>
	</TableRow>
    <View android:layout_height="1dip"
    	android:background="#FFBEBEBE"/>
	<TableRow>
		<TextView android:id="@+id/text_ringtone"
			android:textSize="16dip"
			android:paddingLeft="8dip"
			android:layout_height="fill_parent"
			android:gravity="center_vertical"
			android:text="@string/label_ringtone"/>
		<CheckBox android:id="@+id/checkbox_ringtone"
			android:paddingRight="8dip"
			android:gravity="right"/>
	</TableRow>
    <View android:layout_height="2dip"
    	android:background="#FFBEBEBE"/>
	<LinearLayout android:layout_height="fill_parent">
		<Button android:id="@+id/button_save"
			android:textSize="16dip"
			android:padding="8dip"
			android:layout_gravity="bottom"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="@string/label_save"/>
	</LinearLayout>
</TableLayout>