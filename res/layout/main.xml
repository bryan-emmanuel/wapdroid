<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@color/background"
	android:padding="4dip"
	android:stretchColumns="0">
	<TableRow>
		<TableLayout android:background="@drawable/field"
			android:padding="16dip"
			android:stretchColumns="0">
			<TableRow>
				<TextView android:textColor="@color/text_primary"
					android:textSize="18dip"
					android:text="@string/label_WIFI"/>
				<TextView android:id="@+id/field_wifiState"
					android:textStyle="bold"
			    	android:textColor="@color/text_primary"
					android:gravity="right"
					android:textSize="18dip"
					android:text="@string/scanning"/>
		    </TableRow>
			<TableRow>
				<TextView android:textColor="@color/text_secondary"
					android:textSize="14dip"
					android:text="@string/label_BSSID"/>
				<TextView android:id="@+id/field_wifiBSSID"
			    	android:textColor="@color/text_secondary"
					android:gravity="right"
					android:textSize="14dip"
					android:text="@string/scanning"/>
			</TableRow>
		</TableLayout>
	</TableRow>
	<TableRow>
		<TableLayout android:background="@drawable/field"
			android:padding="16dip"
			android:stretchColumns="0">
			<TableRow>
				<TextView android:id="@+id/label_CID"
			    	android:textColor="@color/text_primary"
					android:textSize="18dip"
					android:text="@string/label_CID"/>
				<TextView android:id="@+id/field_CID"
					android:textStyle="bold"
			    	android:textColor="@color/text_primary"
					android:gravity="right"
					android:textSize="18dip"
					android:text="@string/scanning"/>
		    </TableRow>
			<TableRow>
				<TextView android:id="@+id/label_LAC"
			    	android:textColor="@color/text_primary"
					android:textSize="18dip"
					android:text="@string/label_LAC"/>
				<TextView android:id="@+id/field_LAC"
					android:textStyle="bold"
			    	android:textColor="@color/text_primary"
					android:gravity="right"
					android:textSize="18dip"
					android:text="@string/scanning"/>
		    </TableRow>
			<TableRow>
				<TextView android:id="@+id/label_MNC"
			    	android:textColor="@color/text_secondary"
					android:textSize="14dip"
					android:text="@string/label_MNC"/>
				<TextView android:id="@+id/field_MNC"
			    	android:textColor="@color/text_secondary"
					android:gravity="right"
					android:textSize="14dip"
					android:text="@string/scanning"/>
		    </TableRow>
			<TableRow>
				<TextView android:id="@+id/label_MCC"
			    	android:textColor="@color/text_secondary"
					android:textSize="14dip"
					android:text="@string/label_MCC"/>
				<TextView android:id="@+id/field_MCC"
			    	android:textColor="@color/text_secondary"
					android:gravity="right"
					android:textSize="14dip"
					android:text="@string/scanning"/>
		    </TableRow>
			<TableRow>
				<TextView android:id="@+id/signal"
			    	android:textColor="@color/text_secondary"
					android:textSize="14dip"
					android:text="@string/signal"/>
				<TextView android:id="@+id/field_signal"
			    	android:textColor="@color/text_secondary"
					android:gravity="right"
					android:textSize="14dip"
					android:text="@string/scanning"/>
		    </TableRow>
		</TableLayout>
	</TableRow>
	<TableRow>
		<TableLayout android:background="@drawable/field"
			android:padding="16dip"
			android:stretchColumns="0">
			<TableRow>
				<TextView android:textColor="@color/text_primary"
					android:textSize="18dip"
					android:text="@string/battery_remaining"/>
				<TextView android:id="@+id/field_battery"
					android:textStyle="bold"
			    	android:textColor="@color/text_primary"
					android:gravity="right"
					android:textSize="18dip"
					android:text="@string/scanning"/>
		    </TableRow>
		</TableLayout>
	</TableRow>
</TableLayout>