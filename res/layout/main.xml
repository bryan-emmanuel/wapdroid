<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:stretchColumns="0">
	<TableRow>
		<TextView android:textStyle="bold"
			android:paddingLeft="8dip"
			android:layout_height="fill_parent"
			android:gravity="center_vertical"
			android:textSize="16dip"
			android:text="@string/label_wapdroidState"/>
		<CheckBox android:id="@+id/checkbox_wapdroidState"
			android:paddingRight="8dip"
			android:gravity="right"/>
	</TableRow>
    <View android:layout_height="2dip"
    	android:background="#FFBEBEBE"/>
	<TableRow>
		<TextView android:id="@+id/label_MNC"
			android:textStyle="bold"
			android:paddingTop="8dip"
			android:paddingBottom="2dip"
			android:paddingLeft="8dip"
			android:textSize="16dip"
			android:text="@string/label_MNC"/>
		<TextView android:id="@+id/field_MNC"
			android:paddingTop="8dip"
			android:paddingBottom="2dip"
			android:paddingRight="8dip"
			android:gravity="right"
			android:textSize="16dip"/>
    </TableRow>
	<TableRow>
		<TextView android:id="@+id/label_MCC"
			android:paddingTop="2dip"
			android:paddingBottom="2dip"
			android:paddingLeft="16dip"
			android:textSize="12dip"
			android:text="@string/label_MCC"/>
		<TextView android:id="@+id/field_MCC"
			android:paddingTop="2dip"
			android:paddingBottom="2dip"
			android:paddingRight="8dip"
			android:gravity="right"
			android:textSize="12dip"/>
    </TableRow>
	<TableRow>
		<TextView android:id="@+id/label_CID"
			android:paddingTop="2dip"
			android:paddingBottom="8dip"
			android:paddingLeft="16dip"
			android:textSize="12dip"
			android:text="@string/label_CID"/>
		<TextView android:id="@+id/field_CID"
			android:paddingTop="2dip"
			android:paddingBottom="8dip"
			android:paddingRight="8dip"
			android:gravity="right"
			android:textSize="12dip"/>
    </TableRow>
    <View android:layout_height="2dip"
    	android:background="#FFBEBEBE"/>
	<TableRow>
		<TableLayout android:layout_width="wrap_content"
			android:paddingLeft="8dip"
			android:layout_height="fill_parent"
			android:gravity="center_vertical">
			<TableRow>
				<TextView android:textStyle="bold"
					android:textSize="16dip"
					android:text="@string/label_WIFI"/>
    		</TableRow>
			<TableRow>
				<TextView android:id="@+id/field_wifiState"
					android:paddingLeft="8dip"
					android:textSize="12dip"/>
    		</TableRow>
		</TableLayout>
		<CheckBox android:id="@+id/checkbox_wifiState"
			android:paddingRight="8dip"
			android:gravity="right"/>
    </TableRow>
</TableLayout>